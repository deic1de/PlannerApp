@model MvcPlannerApp.Models.Plans

@{
    ViewData["Title"] = "Details";
}

<h2>Детали</h2>

<div>
    <h4>Планы</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            Название задачи
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Title)
        </dd>
        <dt>
            Дата выполнения
        </dt>
        <dd>
            @Html.DisplayFor(model => model.ReleaseDate)
        </dd>
    </dl>
</div>
<div>
    <a class="btn btn-default" asp-action="Edit" asp-route-id="@Model.ID">Изменить</a> |
    <a class="btn btn-default" asp-action="Index">Назад к списку</a>
</div>
